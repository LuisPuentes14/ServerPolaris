@section Estilos{

    <link rel="stylesheet" href="~/vendor/datatables/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/vendor/datatables/extensiones/css/responsive.dataTables.min.css">
    <link rel="stylesheet" href="~/vendor/datatables/extensiones/css/buttons.dataTables.min.css">
}

<div class="text-center">

    <textarea class="col-12" id="prompt"></textarea>
    <button onclick="send()">Enviar</button>

</div>

<div class="text-center" id="result"></div>

<script>

    function send() {

        const url = "/DataBaseClienteConuslta/Query?comando=" + document.getElementById("prompt").value;

        fetch(url)
            .then(data => data.text())
            .then(text => {
                document.getElementById("result").innerHTML = text

                tablaData = $('#tbdata').DataTable({
                    responsive: true,

                    language: {
                        url: "https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                    },
                });
            });

    }



</script>



@section Scripts{

    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>

